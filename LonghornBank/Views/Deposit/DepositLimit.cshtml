@using LonghornBank.Controllers
@using LonghornBank.Models


@{
    ViewBag.Title = "Deposit";
}

<h2>Deposit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                Account Selected: <br />@Html.RadioButton("SelectedAccount", (string)ViewBag.SelectedAccount, true, new { @class = "form-check-input" }) @ViewBag.SelectedAccount<br /> <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Enter an Amount: <br />@Html.TextBox("SelectedAmount", null, new { @class = "form-control" }) <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Enter a transaction date: <br />@Html.TextBox("TransactionDate", null, new { @class = "form-control" }) <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deposit" class="btn btn-default" />
            </div>
        </div>
    </div>
}