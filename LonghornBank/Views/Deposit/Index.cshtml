@using LonghornBank.Controllers
@using LonghornBank.Models
@model LonghornBank.Models.Transaction


@{
    ViewBag.Title = "Index";
}

<h2>Deposit</h2>

<br /> <br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                Choose an Account: <br />@Html.DropDownList("SelectedAccount", (SelectList)ViewBag.AllAccounts, new { @class = "form-control" }) <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Enter an Amount: <br />@Html.TextBox("SelectedAmount", null, new { @class = "form-control" }) <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Enter a transaction date: <br />@Html.TextBox("TransactionDate", null, new { @class = "form-control" }) <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deposit" class="btn btn-default" />
            </div>
        </div>
    </div>
}