@using LonghornBank.Controllers
@using LonghornBank.Models

@{
    ViewBag.Title = "Index";
}

<h2>Transfer</h2>

<br /> <br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                Choose an Account: <br />@Html.DropDownList("SelectedFrom", (SelectList)ViewBag.Accounts, new { @class = "form-control" }) <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Choose an Account: <br />@Html.DropDownList("SelectedTo", (SelectList)ViewBag.Accounts, new { @class = "form-control" }) <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Enter an Amount: <br />@Html.TextBox("SelectedAmount", null, new { @class = "form-control" }) <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Enter a transaction date: <br />@Html.TextBox("TransactionDate", null, new { @class = "form-control" }) <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Transfer" class="btn btn-default" />*@
                <input type="submit" name="name" value="Transfer" onclick="return confirm('Transfer $' + SelectedAmount.value + ' from ' + SelectedFrom.value + ' to ' + SelectedTo.value + '?')" />
            </div>
        </div>
        </div>
}

<script type="text/javascript">
    function Submit() {
            if (confirm("Are you sure you want to submit ?")) {
                document.getElementById('anchortag').href += "?isTrue=true";
            } else {
                document.getElementById('anchortag').href += "?isTrue=false";
            }
            return true;
        }
</script>